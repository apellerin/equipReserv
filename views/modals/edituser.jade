div.modal.fade(id='edituser' role='dialog' aria-labelledby='edituserlabel' aria-hidden='true')
  div.modal-dialog
   div.row
    div.modal-content.col-md-12
      div.modal-body
        form.form-horizontal(method="POST", action="/admin/users/edit", id="edituserform" enctype="multipart/form-data" novalidate)
          div.form-group
            h3 Edit User
          div.form-group
            label(for="user_name") Username:
            input.form-control(type="text", id="user_name",placeholder="Enter Username", name="user_name", autofocus required)
            p.help-block
          div.form-group
            label(for="password") Password:
            input.form-control(type="password", id="password",placeholder="Enter Password", name="password" required)
            p.help-block
          div.form-group
            label(for="username") First Name:
            input.form-control(type="text", id="first_name",placeholder="First Name", name="first_name" required)
            p.help-block
          div.form-group
            label(for="username") Last Name:
            input.form-control(type="text", id="last_name",placeholder="Last Name", name="last_name" required)
            p.help-block
          div.form-group
            label(for="username") Nickname:
            input.form-control(type="text", id="nickname",placeholder="Nickname", name="nickname" required)
            p.help-block
          div.form-group
            label(for="username") Email Address:
            input.form-control(type="email", id="email",placeholder="Enter Valid Email Address", name="email" required)
            p.help-block
          div.form-group
            label(for="username") Phone:  
              span.badge Format: 123-123-1234
            input.form-control(type="tel", id="phone",placeholder="Phone Number", name="phone" pattern="^(\([0-9]{3}\) |[0-9]{3}-)[0-9]{3}-[0-9]{4}$"
            data-validation-pattern-message="Please enter a valid telephone format")
            p.help-block
          div.form-group
            label(for="username") User Level:
            input.form-control(type="text", id="user_level",placeholder="Last Name", name="user_level" required)
            p.help-block
          div.form-group
            label(for="username") Activated:
            input.form-control(type="text", id="activated",placeholder="Last Name", name="activated" required)
            p.help-block
          div.form-group
            label(for="username") Created:
            input.form-control(type="text", id="created",placeholder="Last Name", name="created" required)
            p.help-block
          div.form-group
            label(for="username") Last Login:
            input.form-control(type="text", id="last_login",placeholder="Last Name", name="last_login" required)
            p.help-block
          div.form-group
            label(for="username") Hash:
            input.form-control(type="text", id="hash",placeholder="Last Name", name="hash" required)
            p.help-block
          div.form-group
            button.btn.btn-primary(type="submit") Submit
            text    
            a.btn.btn-danger(data-dismiss='modal') Cancel