extends ../layout
block content
  if (message) 
    include ../feedback/feedback
  div.col-xs-12.col-sm-9
    h2.clearfix Report Administration
    br
    div.input-group
      span.input-group-addon Filter
      input#filter.form-control(style="width:200px")
    div.table-responsive(style="background-color:white")
      table#eqlist.table.table-hover
        thead
          tr
            th Type
            th Make
            th Model
            th Description
            th 
            th
            th
        tbody
          tr#tablecontents
      ul.pager
            li.page-control.previous
              a(href='#') ← Prev
            li.page-control.next
              a(href='#') Next →
  //Modals
  include ../modals/editequiptype
  include ../modals/editequipment
block css
  link(rel='stylesheet', href='/stylesheets/jasny-bootstrap.min.css')
block scripts
  script(src="/scripts/page/equiplist.js")
  script(src='/scripts/bootstrap-file-input.js')
  script(src='/scripts/jqBootstrapValidation.js')
  script(src='/scripts/jasny-bootstrap.min.js')