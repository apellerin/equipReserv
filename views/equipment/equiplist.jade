extends ../layout
block content
  if (message) 
    include ../feedback
  .row
    h1.page-header Equipment Administration
  .row
    .dashcontainer.col-lg-6
      h4.sub-header.section-header 
      div.input-group.btn-group
          span.input-group-addon Filter
          input#filter.form-control(style="width:200px")
          a.pull-right(href='#equipModal' role='button' data-toggle="modal" data-target="#equipModal")
            button.btn.btn-success.btn-md.pull-left
              span.glyphicon.glyphicon-plus
      h4.sub-header.section-header
      div.table.table-responsive(style="background-color:white")
        table#eqlist.table.table-hover
          thead
            tr#tableheadings
              th Type
              th Make
              th Model
              th Description
              th 
              th
              th
          tbody
            tr#tablecontents
      ul.pager
            li.page-control.previous
              a(href='#') ← Prev
            li.page-control.next
              a(href='#') Next →
  //Modals
  include ../equipment/editequiptype
  include ../equipment/editequipment
  include ../equipment/addequipment
block css
  link(rel='stylesheet', href='/stylesheets/jasny-bootstrap.min.css')
  link(rel='stylesheet', href='/stylesheets/alertify.core.css')
  link(rel='stylesheet', href='/stylesheets/alertify.bootstrap.css')
block scripts
  script(src='/scripts/bootstrap-file-input.js')
  script(src='/scripts/jqBootstrapValidation.js')
  script(src='/scripts/jasny-bootstrap.min.js')
  script(src='/scripts/alertify.min.js')
  script(src='/scripts/page/equiplist.js')