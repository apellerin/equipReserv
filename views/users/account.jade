extends ../layout
block content
  if (message || notactivated || resetpassword) 
    include ../feedback/feedback
  div.col-xs-12.col-sm-9
    div.jumbotron.clearfix
      div.container
        form.form-horizontal(method="POST", action="/users/update", id="accountform" novalidate)
          div.form-group
            H2 #{user.user_name}'s Account
          div.form-group
            H3 Edit Account  / 
              a(href='/users/changepass') Change Password
          div.form-group
            label(for="user_name") Username:
            input.form-control(type="text", id="user_name",value="#{user.user_name}", name="user_name", required)
            p.help-block
          div.form-group
            label(for="username") First Name:
            input.form-control(type="text", id="first_name",value="#{user.first_name}", name="first_name" required)
            p.help-block
          div.form-group
            label(for="username") Last Name:
            input.form-control(type="text", id="last_name",value="#{user.last_name}", name="last_name" required)
            p.help-block
          div.form-group
            label(for="username") Email Address:
            input.form-control(type="email", id="email",value="#{user.email}", name="email" required)
            p.help-block
          div.form-group
            label(for="username") Phone:  
              span.badge Format: 123-123-1234
            input.form-control(type="tel", id="username",value="#{user.phone}", name="phone" pattern="^(\([0-9]{3}\) |[0-9]{3}-)[0-9]{3}-[0-9]{4}$"
            data-validation-pattern-message="Please enter a valid telephone format")
            p.help-block
          div.form-group
            label(for="password") Confirm Password:
            input.form-control(type="password", id="password",placeholder="Confirm Password", name="password" required)
            p.help-block
          div.form-group
            button.btn.btn-primary(type="submit") Update
            text    
            a.btn.btn-danger(type="reset", href='/index') Cancel
block scripts
  script(src='/scripts/jqBootstrapValidation.js')
  script $(document).ready(function(){$("input,select,textarea").not("[type=submit]").jqBootstrapValidation();});